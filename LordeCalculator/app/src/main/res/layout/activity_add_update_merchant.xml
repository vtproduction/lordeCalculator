<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/btn_back"
            android:background="@drawable/ripple_effect">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_action_arrow_left_white"
                android:padding="23dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Quay lại"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên"
                style="@style/txt_style_1"
                android:id="@+id/label_1"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/txt_style_2"
                android:id="@+id/edt_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:layout_below="@id/label_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:text="NHÀ CÁI"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_is_owner_selected"
                android:id="@+id/btn_switch_owner"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            style="@style/txt_style_1"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/txt_style_2"
            android:id="@+id/edt_phone"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đề"
                    style="@style/txt_style_1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txt_style_2"
                    android:id="@+id/edt_rate_de"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lô"
                    style="@style/txt_style_1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txt_style_2"
                    android:id="@+id/edt_rate_lo"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xiên"
                    style="@style/txt_style_1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txt_style_2"
                    android:id="@+id/edt_rate_xien"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số dư"
            style="@style/txt_style_1"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/txt_style_2"
            android:id="@+id/edt_remain_loan"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btn_primary"
            android:id="@+id/btn_submit"
            android:text="tạo mới"/>
    </LinearLayout>
</LinearLayout>